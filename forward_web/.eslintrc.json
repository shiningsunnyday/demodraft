{
  "plugins": ["vue"],
  "extends": ["plugin:vue/base"],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    // override/add rules settings here:
    "vue/no-unused-vars": "warn",
    "vue/html-indent": [
      "error",
      2,
      {
        "attribute": 1,
        "baseIndent": 1,
        "closeBracket": 0
      }
    ],
    "vue/script-indent": ["error", 2],
    "semi": "error"
  }
}
